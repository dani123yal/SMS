
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutForStudent.cshtml";
}

<!DOCTYPE html>
<html>
<head>

    <style>
        .rotated {
            transform: rotate(90deg);
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
