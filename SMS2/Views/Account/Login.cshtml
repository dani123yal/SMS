
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>School Management System</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Theme/AdminLTE-2.4.13/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Theme/AdminLTE-2.4.13/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Theme/AdminLTE-2.4.13/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Theme/AdminLTE-2.4.13/dist/css/AdminLTE.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Theme/AdminLTE-2.4.13/plugins/iCheck/square/blue.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page" style="background-image:url(/images/background2.jpg);background-size:cover;background-position:center;background-repeat:no-repeat;">


    <div class="login-box" style="margin-top:135px">
        <!-- /.login-logo -->
        <div class="login-box-body" style="
	  background-color: rgba(255,255,255,0.15); /* Black w/opacity/see-through */

    box-shadow: 0px 5px 40px 5px rgba(0,0,0,0.7);
        border:1px thin black;
        border-radius:5px 5px;
    color:white;
	  z-index:9999;
	  text-align: center;">

            <b style="font-size:36px;color:dodgerblue;">Note</b><label style="font-size:36px;font-weight:500;margin-bottom:30px">Book</label>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group has-feedback">
                    <input style="background-color:transparent;height:35px;width:100%;color:white;border:2px solid white;border-radius:10px 10px;color:white;text-align:center;font-size:18px;margin-top:10px;margin-bottom:10px;" type="email" name="UserName" placeholder="Email">
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" name="Password" style="background-color:transparent;height:35px;width:100%;color:white;border:2px solid white;border-radius:10px 10px;color:white;text-align:center;font-size:18px;margin-top:20px;margin-bottom:30px;" placeholder="Password" />
                </div>
                

                <label style="float:left;margin-bottom:10px;color:white;font-size:16px;margin-top :0;margin-bottom:20px;">
                    <input type="checkbox" style="padding-right:15px;"><label style="margin-left:10px">Remember Me</label>
                </label>
                <!-- /.col -->
                <button type="submit" style="height:40px;width:100%;color:white;border-radius:10px 10px;color:white;text-align:center;font-size:18px;margin-top:30px;margin-bottom:30px;    " class="btn btn-primary btn-block btn-flat">LOGIN   </button>
            }


            <!-- /.social-auth-links -->

            <a href="register.html" style="float:left;color:white;font-size:16px;" class="text-center">Register</a>
            <a href="#" style="color:white;float:right;font-size:16px;">Forget your Password?</a><br>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Theme/AdminLTE-2.4.13/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Theme/AdminLTE-2.4.13/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Theme/AdminLTE-2.4.13/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });</script>

</body>
</html>