@model SMS2.ViewModel.StudentAttendanceModel

@{
    ViewBag.Title = "viewStudentAttendance";
    Layout = "~/Views/Shared/_LayoutForStudent.cshtml";
}

<h2>viewStudentAttendance</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-md-12">

        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.AttendanceList.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        
                        <td>@Html.DisplayFor(item => item.AttendanceList[i].att_Date.Value.DayOfWeek), @Html.DisplayFor(item => item.AttendanceList[i].att_Date)</td>
                        
                        <td>@Html.DisplayFor(item => item.AttendanceList[i].att_Status)</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
