@model SMS2.ViewModel.StudentAttendanceModel

@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_LayoutForStudent.cshtml";
}

@using (Html.BeginForm("index", "AttendanceForStudent", FormMethod.Post))
{

    <div class="box">
        <div class="box-header">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4 text-center">
                    <h1 style="font-family:Arial; font-weight:bold">Select Month</h1>
                    <h4 style="font-family:Arial; font-weight:500">View Attendance</h4>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
        <div class="box-body">
            <div class="row">

            </div>
            <div class="form-group">
                <select name="month" class="form-control" style="height: 50px;font-size:x-large">
                    <option value="1">January</option>
                    <option value="2">Febuary</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" name="name" value="View" class="btn btn-block btn-primary btn-lg" style="font-size:x-large"/>
            </div>
        </div>
    </div>

}





